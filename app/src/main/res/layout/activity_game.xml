<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context=".activity_game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#080021">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                >

                <ProgressBar
                    android:id="@+id/game_progressBar_player1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF" />

                <ImageView
                    android:id="@+id/game_IMG_player1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/PSG_IMG_Logo"
                    android:layout_below="@+id/game_progressBar_player1"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/game_BTN_player1_attack1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="10dp"
                    android:background="@color/colorAccent"
                    android:text="attack 1" />

                <Button
                    android:id="@+id/game_BTN_player1_attack2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="10dp"
                    android:background="@color/colorAccent"
                    android:text="attack 2" />

                <Button
                    android:id="@+id/game_BTN_player1_attack3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="10dp"
                    android:background="@color/colorAccent"
                    android:text="attack 3" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/game_BTN_player2_attack1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:background="#FF0000"
                    android:text="attack 1" />

                <Button
                    android:id="@+id/game_BTN_player2_attack2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="#FF0000"
                    android:layout_weight="1"
                    android:text="attack 2" />

                <Button
                    android:id="@+id/game_BTN_player2_attack3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="#FF0000"
                    android:layout_weight="1"
                    android:text="attack 3" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                >

                <ProgressBar
                    android:id="@+id/game_progressBar_player2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF" />

                <ImageView
                    android:id="@+id/game_IMG_player2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bayren_img_logo"
                    android:layout_below="@+id/game_progressBar_player2"/>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>